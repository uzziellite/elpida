---
import Header from "@components/header.astro"
import Footer from "@components/footer.astro"

const {type} = Astro.props
const {author} = Astro.props
const {title} = Astro.props
const {og_width} = Astro.props
const {og_url} = Astro.props
const {og_height} = Astro.props
const {og_image} = Astro.props
const {canonical} = Astro.props
const {publish_time} = Astro.props
const {description} = Astro.props
const {modified_time} = Astro.props
const {og_image_type} = Astro.props
const {estimate_read_time} = Astro.props
---

<!doctype html>
<html lang="en">
	<head>
	    <meta charset="utf-8">
	    <meta http-equiv="x-ua-compatible" content="ie=edge">
	    <title>{title}</title>
	    <link rel="preconnect" href={import.meta.env.PUBLIC_CMS} crossorigin>
	    <meta name="description" content={description}>
	    <link rel="canonical" href={canonical}>
	    <meta name="viewport" content="width=device-width, initial-scale=1">
	    <link rel="shortcut icon" type="image/x-icon" href="/assets/img/logo/favicon.ico">
	    <meta property="og:locale" content={`en-KE`}>
	    <meta property="og:type" content={type}>
	    <meta property="og:title" content={title}>
	    <meta property="og:description" content={description}>
	    <meta property="og:url" content={canonical}>
	    <meta property="og:site_name" content="Elpida Africa">
	    <meta property="article:published_time" content={publish_time}>
	    <meta property="article:modified_time" content={modified_time}>
	    <meta property="og:image" content={og_image}>
	    <meta property="og:image:width" content={og_width}>
	    <meta property="og:image:height" content={og_height}>
	    <meta property="og:image:type" content={og_image_type}>
	    <meta name="author" content={author}>
	    <meta name="twitter:card" content="summary_large_image">
	    <meta name="twitter:label1" content={`Written by`}>
	    <meta name="twitter:data1" content={author}>
	    <meta name="twitter:label2" content="Est. reading time">
	    <meta name="twitter:data2" content={estimate_read_time}>
	    <link rel="stylesheet" href="/assets/css/bootstrap.min.css">
	    <link rel="stylesheet" href="/assets/css/animate.css">
	    <link rel="stylesheet" href="/assets/css/custom-animation.css">
	    <link rel="stylesheet" href="/assets/css/slick.css">
	    <link rel="stylesheet" href="/assets/css/flaticon.css">
	    <link rel="stylesheet" href="/assets/css/nice-select.css">
	    <link rel="stylesheet" href="/assets/css/flaticon.css">
	    <link rel="stylesheet" href="/assets/css/swiper-bundle.css">
	    <link rel="stylesheet" href="/assets/css/meanmenu.css">
	    <link rel="stylesheet" href="/assets/css/font-awesome-pro.css">
	    <link rel="stylesheet" href="/assets/css/magnific-popup.css">
	    <link rel="stylesheet" href="/assets/css/spacing.css">
	    <link rel="stylesheet" href="/assets/css/style.css">
	</head>

	<body>
		<Header />

		<main>
			<slot />
		</main>

		<Footer />
		
		<script src="/assets/js/jquery.js" is:inline></script>
	  <script src="/assets/js/waypoints.js" is:inline></script>
	  <script src="/assets/js/bootstrap.bundle.min.js" is:inline></script>
	  <script src="/assets/js/slick.js" is:inline></script>
	  <script src="/assets/js/magnific-popup.js" is:inline></script>
	  <script src="/assets/js/purecounter.js" is:inline></script>
	  <script src="/assets/js/wow.js" is:inline></script>
	  <script src="/assets/js/nice-select.js" is:inline></script>
	  <script src="/assets/js/swiper-bundle.js" is:inline></script>
	  <script src="/assets/js/isotope-pkgd.js" is:inline></script>
	  <script src="/assets/js/imagesloaded-pkgd.js" is:inline></script>
	  <script src="/assets/js/ajax-form.js" is:inline></script>
	  <script src="/assets/js/main.js" is:inline></script>
	</body>
</html>
